      {
        "type": "SolutionWorkedSteps",
        "id": "q7-worked",
        "props": {
          "questionNumber": "7",
          "marks": 7,
          "steps": [
            {
              "description": "Set up equations for the two given conditions",
              "working": "\\begin{align*}T_4 &= ar^3 = 54\\\\T_7 &= ar^6 = 1458\\end{align*}",
              "explanation": "Write the general term for each position"
            },
            {
              "description": "Divide to find r^3",
              "working": "\\begin{align*}\\frac{ar^6}{ar^3} &= \\frac{1458}{54}\\\\r^3 &= 27\\end{align*}",
              "explanation": "This eliminates a and gives us r^3"
            },
            {
              "description": "Solve for r using logarithms",
              "working": "\\begin{align*}\\log(r^3) &= \\log(27)\\\\3\\log(r) &= \\log(27)\\\\\\log(r) &= \\frac{\\log(27)}{3} = \\frac{\\log(3^3)}{3} = \\log(3)\\\\r &= 3\\end{align*}",
              "explanation": "Common ratio is 3"
            },
            {
              "description": "Find first term a",
              "working": "\\begin{align*}ar^3 &= 54\\\\a(3)^3 &= 54\\\\27a &= 54\\\\a &= 2\\end{align*}",
              "explanation": "Substitute r = 3 back"
            },
            {
              "description": "Find which term equals 39366",
              "working": "\\begin{align*}ar^{n-1} &= 39366\\\\2 \\times 3^{n-1} &= 39366\\\\3^{n-1} &= 19683\\end{align*}",
              "explanation": "Set up equation for the unknown term"
            },
            {
              "description": "Apply logarithms to solve for n",
              "working": "\\begin{align*}\\log_3(3^{n-1}) &= \\log_3(19683)\\\\n - 1 &= \\log_3(19683)\\\\n - 1 &= \\log_3(3^9) = 9\\\\n &= 10\\end{align*}",
              "explanation": "Since 19683 = 3^9"
            }
          ],
          "finalAnswer": "The 10th term equals 39366"
        }
      },
      {
        "type": "SolutionWorkedSteps",
        "id": "q8-worked",
        "props": {
          "questionNumber": "8",
          "marks": 8,
          "steps": [
            {
              "description": "Write the sum formula for infinite geometric series",
              "working": "\\begin{align*}S_\\infty &= \\frac{a}{1 - r} = 20\\end{align*}",
              "explanation": "Given that the sum to infinity is 20, and |r| < 1 for convergence"
            },
            {
              "description": "Express the sum of first 5 terms",
              "working": "\\begin{align*}S_5 &= \\frac{a(1 - r^5)}{1 - r} = 19.375\\end{align*}",
              "explanation": "Given condition for the partial sum"
            },
            {
              "description": "Divide the two equations",
              "working": "\\begin{align*}\\frac{S_5}{S_\\infty} &= \\frac{\\frac{a(1 - r^5)}{1 - r}}{\\frac{a}{1 - r}}\\\\\\frac{19.375}{20} &= 1 - r^5\\\\0.96875 &= 1 - r^5\\end{align*}",
              "explanation": "This eliminates a and (1-r)"
            },
            {
              "description": "Solve for r^5",
              "working": "\\begin{align*}r^5 &= 1 - 0.96875\\\\r^5 &= 0.03125\\\\r^5 &= \\frac{1}{32}\\end{align*}",
              "explanation": "Rearrange to isolate r^5"
            },
            {
              "description": "Take the fifth root using logarithms",
              "working": "\\begin{align*}\\log(r^5) &= \\log(0.03125)\\\\5\\log(r) &= \\log(2^{-5})\\\\5\\log(r) &= -5\\log(2)\\\\\\log(r) &= -\\log(2) = \\log(0.5)\\\\r &= 0.5\\end{align*}",
              "explanation": "Since 1/32 = 2^(-5)"
            },
            {
              "description": "Find the first term a",
              "working": "\\begin{align*}\\frac{a}{1 - r} &= 20\\\\\\frac{a}{1 - 0.5} &= 20\\\\\\frac{a}{0.5} &= 20\\\\a &= 10\\end{align*}",
              "explanation": "Substitute r = 0.5 into the infinite sum equation"
            },
            {
              "description": "Verify the solution",
              "working": "\\begin{align*}S_5 &= \\frac{10(1 - (0.5)^5)}{0.5} = 20(1 - 0.03125) = 19.375\\end{align*}",
              "explanation": "Checking confirms our values are correct"
            }
          ],
          "finalAnswer": "a = 10, r = 0.5 (or r = 1/2)"
        }
