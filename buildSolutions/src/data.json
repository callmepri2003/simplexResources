          "steps": [
            {
              "description": "Set up the equation for the sum of the first n terms",
              "working": "\\begin{align*}S_n &= \\frac{a(r^n - 1)}{r - 1}\\\\S_n &= \\frac{4(2^n - 1)}{2 - 1} = 4(2^n - 1)\\end{align*}",
              "explanation": "Using the geometric series sum formula with a = 4, r = 2"
            },
            {
              "description": "Set sum equal to 8188",
              "working": "\\begin{align*}4(2^n - 1) &= 8188\\\\2^n - 1 &= 2047\\\\2^n &= 2048\\end{align*}",
              "explanation": "Isolate the exponential term"
            },
            {
              "description": "Apply logarithms",
              "working": "\\begin{align*}\\log_2(2^n) &= \\log_2(2048)\\\\n &= \\log_2(2048)\\end{align*}",
              "explanation": "Using base 2 logarithm to match the exponential base"
            },
            {
              "description": "Evaluate the logarithm",
              "working": "\\begin{align*}2048 &= 2^{11}\\\\n &= 11\\end{align*}",
              "explanation": "Since 2048 = 2^11, we have log_2(2048) = 11"
            },
            {
              "description": "Verify the answer",
              "working": "\\begin{align*}S_{11} &= 4(2^{11} - 1) = 4(2048 - 1) = 4 \\times 2047 = 8188\\end{align*}",
              "explanation": "Checking confirms our answer is correct"
            }
          ],
          "finalAnswer": "n = 11 terms"
        }
